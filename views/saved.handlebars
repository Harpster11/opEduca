<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="/">OpEduca</a>
  <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false"
    aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/">Home
          <span class="sr-only">(current)</span>
        </a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/saved">Saved Articles
          <span class="sr-only">(current)</span>
        </a>
      </li>

    </ul>
  </div>
</nav>
<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image-saved">
  </div>
  <div class="caption">
    <h1>Comments</h1>
    <p>Ongoing conversations about Oregonian News</p>
  </div>
</div>
<div class="container-fluid article-container">
  {{#each articles}}
    <div data-_id={{this._id}} class="card">
      <div class="card-header">
        <h3>
          <a class="article-link" target="_blank" rel="noopener noreferrer" href="{{this.url}}">{{this.headline}}</a>
          <a class="btn btn-warning delete">Delete Article</a>
          <a class="btn btn-primary comments">View Comments</a>
        </h3>
      </div>
      <div class="card-body">{{this.summary}}</div>
    </div>
  {{/each}}
  {{#unless articles.length}}
    <div class="alert alert-dark text-center">
      <h4>There are no saved currently saved conversations.</h4>
    </div>
    <div class="card">
      <div class="card-header text-center">
        <h3>Would You Like to Browse New Articles?</h3>
      </div>
      <div class="card-body text-center">
        <h4>
          <a href="/">Browse Articles</a>
        </h4>
      </div>
    </div>
  {{/unless}}
</div>

<footer class="footer">
  <div class="container">
    <p>OpEduca | The Oregonian and Oregonlive | Copyright 2019 John Harper, Grapple Media Inc.</p>
  </div>
</footer>

